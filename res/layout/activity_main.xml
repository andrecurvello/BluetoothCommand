<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <Button
        android:id="@+id/btnScan"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="40dp"
        android:text="@string/scan_bluetooth"/>

    <ListView
        android:id="@+id/lvDevicesFound"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnScan"
        android:layout_marginBottom="30dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"/>

    <TextView android:id="@android:id/empty"
		android:layout_width="wrap_content"
		android:layout_height="0dip"
		android:text="@string/no_list_data"/>

    <ProgressBar
        android:id="@+id/progressBarScanning"
        style="?android:attr/progressBarStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lvDevicesFound"
        android:layout_marginTop="11dp" 
        android:layout_centerHorizontal="true" 
        android:visibility="gone"/>

    <Button
        android:id="@+id/btnStartListening"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="Start Listening" />

</RelativeLayout>
